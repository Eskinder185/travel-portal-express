<div class="container">
  <h1 class="hero">📍 {{title}}</h1>
  <p class="text-center muted mb-6">{{summary}}</p>
  
  <div class="text-center mb-8">
    <div class="tags">
      {{#each tags}}<span class="tag">🏷️ {{this}}</span>{{/each}}
    </div>
  </div>
  
  <div class="card fade-in">
    <div class="markdown">
      {{{html}}}
    </div>
  </div>
  
  <div class="text-center mt-8">
    <a href="/destinations" class="button secondary">← Back to Destinations</a>
  </div>
</div>
